<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="324dp"
            android:gravity="center"
            android:text=""
            android:textSize="36sp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:text="@string/back" />

        <ImageView
            android:id="@+id/displayPhotoImageView"
            android:layout_width="332dp"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:layout_marginTop="68dp"
            android:contentDescription="@string/photo_to_add"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/editPhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="475dp"
            android:text="@string/edit_photo" />

        <Button
            android:id="@+id/movePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="475dp"
            android:layout_marginEnd="-7dp"
            android:text="@string/move_to_another_album" />

        <ListView
            android:id="@+id/photoTagList"
            android:layout_width="191dp"
            android:layout_height="84dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:layout_marginTop="372dp" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>